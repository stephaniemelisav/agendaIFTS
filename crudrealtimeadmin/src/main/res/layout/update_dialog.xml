<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Spinner
        android:id="@+id/spMaterias"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        android:background="@drawable/green_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.10" />

    <EditText
        android:id="@+id/etFecha"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:background="@drawable/green_border"
        android:clickable="true"
        android:drawableStart="@drawable/baseline_date_range_24"
        android:ems="10"
        android:focusable="false"
        android:gravity="center"
        android:hint="Fecha"
        android:inputType="text"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spMaterias"
        app:layout_constraintVertical_bias="0.03" />

    <EditText
        android:id="@+id/etHora"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Hora"
        android:drawableStart="@drawable/baseline_access_time_24"
        android:padding="12dp"
        android:gravity="center"
        android:focusable="false"
        android:clickable="true"
        android:background="@drawable/green_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etFecha"
        app:layout_constraintVertical_bias="0.03" />

    <Spinner
        android:id="@+id/spTipo"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        android:background="@drawable/green_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etHora"
        app:layout_constraintVertical_bias="0.03" />

    <EditText
        android:id="@+id/etNameExamen"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="DescripciÃ³n"
        android:drawableStart="@drawable/baseline_description_24"
        android:padding="12dp"
        android:gravity="center"
        android:inputType="text"
        android:background="@drawable/green_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spTipo"
        app:layout_constraintVertical_bias="0.03" />

    <Button
        android:id="@+id/btnActualizarDatos"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNameExamen"
        app:layout_constraintVertical_bias="0.3" />

</androidx.constraintlayout.widget.ConstraintLayout>